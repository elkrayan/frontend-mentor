@import url("https://fonts.googleapis.com/css2?family=Big+Shoulders+Display:wght@700&family=Lexend+Deca&display=swap");
* {
  box-sizing: border-box;
}

body {
  font-family: "Lexend Deca";
  height: 100vh;
}

.container {
  width: 100%;
  margin-top: 30px;
  max-width: 75%;
  margin: auto;
  display: flex;
  flex-direction: column;
}

article {
  background-color: red;
  width: 100%;
  padding: 32px;
  border-radius: 18px;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-start;
}
article.orange {
  margin-top: 30px;
  background-color: #e38826;
  border-end-end-radius: 0;
  border-end-start-radius: 0;
}
article.orange footer a.btn {
  color: #e38826;
}
article.cyan {
  background-color: #006970;
  border-radius: 0;
}
article.cyan footer a.btn {
  color: #006970;
}
article.darkCyan {
  background-color: #004241;
  border-start-end-radius: 0;
  border-start-start-radius: 0;
}
article.darkCyan footer a.btn {
  color: #004241;
}
article main h2 {
  font-family: "Big Shoulders Display";
  font-weight: 700;
  font-size: 2.2em;
  margin: 28px auto;
  color: white;
  text-transform: uppercase;
}
article main p {
  margin: 20px 0;
  line-height: 1.4;
  color: rgba(255, 255, 255, 0.75);
}
article footer {
  margin-top: 50px;
}
article footer a.btn {
  margin-top: 22px;
  background-color: white;
  padding: 15px 26px;
  border-radius: 22px;
  display: inline-block;
  text-decoration: none;
  font-size: 0.9em;
}
article footer a.btn:hover {
  box-shadow: inset 0 0 10px #0000002f;
}

@media screen and (min-width: 1440px) {
  .container {
    margin-top: 230px;
    flex-direction: row;
    height: 470px;
    justify-content: center;
    align-items: center;
  }

  article {
    width: 22%;
    border-radius: 12px;
  }
  article.orange {
    border-start-end-radius: 0;
    border-end-start-radius: 12px;
  }
  article.darkCyan {
    border-start-end-radius: 12px;
    border-end-start-radius: 0;
  }
}